generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  payments     Payment[]
}

model Payment {
  id          String   @id @default(cuid())
  amount      Int
  currency    String
  description String?
  status      String
  createdAt   DateTime @default(now())

  userId String?
  user   User?    @relation(fields: [userId], references: [id])
}

